{{ "lotion-lp.css" | asset_url | stylesheet_tag }}
<header class="header">
  <div class="header__content container">
    <h1 class="header__title">{{ page.title }}</h1>
    <nav class="header__nav">
      <ul class="header__list">
        {% for link in linklists['main-menu'].links %}
          <li class="header__item">
            <a href="{{ link.url }}" class="header__link">{{ link.title }}</a>
          </li>
        {% endfor %}
      </ul>
    </nav>
  </div>
</header>
<main class="main">
  {% assign featured_product = section.settings.featured_product %}
  {% if featured_product != blank %}
    <section class="hero">
      <div class="hero__content container">
        <div class="hero__informations">
          <span class="hero__eyebrow">Destaque</span>
          <h2 class="hero__title">Hidratação Profunda com a Essência Pura da Natureza.</h2>
          <p class="hero__description">
            {{ featured_product.description | strip_html }}
          </p>
          <a href="{{ featured_product.url }}" class="hero__button">Ver mais</a>
        </div>
        {{ featured_product.featured_image | image_url: width: 350 | image_tag: class: 'hero__image', loading: 'lazy' }}
      </div>
    </section>
  {% endif %}
  {% assign selected_collection = section.settings.collection %}
  {% if selected_collection != blank %}
    <section class="products">
      <div class="products__content container">
        <h2 class="products__title">{{ selected_collection.title }}</h2>
        <div class="products__list">
          {% for product in selected_collection.products %}
            <article class="product">
              {{ product.featured_image | image_url: width: 350 | image_tag: class: 'product__image', loading: 'lazy' }}
              <h3 class="product__title">{{ product.title }}</h3>
              <span class="product__price">{{ product.price | money }}</span>
              <ul class="product__tags">
                {% for tag in product.tags %}
                  <li class="product__tag">{{ tag }}</li>
                {% endfor %}
              </ul>
              <a href="{{ product.url }}" class="product__button">Ver mais</a>
            </article>
          {% endfor %}
        </div>
      </div>
    </section>
  {% endif %}
</main>
<footer class="footer">
  <div class="footer__content container">
    <div class="footer__branding">
      <h2 class="footer__title">{{ page.title }}</h2>
      <span class="footer__phrase">{{ section.settings.footer_phrase }}</span>
    </div>

    <nav class="footer__navigation" aria-label="Navegação secundária">
      <ul class="footer__list">
        {% for link in linklists['footer'].links %}
          <li class="header__item">
            <a href="{{ link.url }}" class="footer__link">{{ link.title }}</a>
          </li>
        {% endfor %}
      </ul>
    </nav>

    <nav class="footer__navigation" aria-label="Links de suporte">
      <ul class="footer__list">
        {% for link in linklists['footer-suporte'].links %}
          <li class="header__item">
            <a href="{{ link.url }}" class="footer__link">{{ link.title }}</a>
          </li>
        {% endfor %}
      </ul>
    </nav>
  </div>
</footer>

{% schema %}
  {
    "name": "Lotion LP Section",
    "settings": [
      {
        "type": "product",
        "id": "featured_product",
        "label": "Produto em Destaque"
      }, {
        "type": "collection",
        "id": "collection",
        "label": "Coleção de Loções"
      }, {
        "type": "text",
        "id": "footer_phrase",
        "label": "frase",
        "default": "O cuidado que sua pele merece, o brilho que você irradia."
      }
    ],
    "presets": [
      {
        "name": "Loções"
      }
    ]
  }
{% endschema %}